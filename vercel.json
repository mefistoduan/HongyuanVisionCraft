{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/css/(.*)$",
      "dest": "public/css/$1"
    },
    {
      "src": "^/js/(.*)$",
      "dest": "public/js/$1"
    },
    {
      "src": "^/images/(.*)$",
      "dest": "public/images/$1"
    },
    {
      "src": "^/sitemap.xml$",
      "dest": "api/index.js"
    },
    {
      "src": "^/robots.txt$",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    }
  ],
  "installCommand": "pnpm install",
  "buildCommand": "pnpm run build"
}