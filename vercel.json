{
  "version": 2,
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "views/**", "public/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "^/sitemap.xml$",
      "dest": "src/main.ts"
    },
    {
      "src": "^/robots.txt$",
      "dest": "src/main.ts"
    },
    {
      "src": "^/css/(.*)$",
      "dest": "public/css/$1"
    },
    {
      "src": "^/js/(.*)$",
      "dest": "public/js/$1"
    },
    {
      "src": "^/images/(.*)$",
      "dest": "public/images/$1"
    },
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    }
  ]
}